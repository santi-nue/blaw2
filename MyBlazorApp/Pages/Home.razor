
@page "/"

<h3>File Reader</h3>
<ul style="height: 200px; overflow-y: scroll;">
    @foreach (var line in lines)
    {
        <li>@line</li>
    }
</ul>

@code {
    private List<string> lines = new List<string>();
    private List<string> fileLines = new List<string>
    {
        "Line 1: This is the first line.",
        "Line 2: This is the second line.",
        "Line 3: This is the third line.",
        "Line 4: This is the fourth line.",
        "Line 5: This is the fifth line."
    };
    private PeriodicTimer timer;
    private int currentLineIndex = 0;

    protected override async Task OnInitializedAsync()
    {
        timer = new PeriodicTimer(TimeSpan.FromSeconds(2));

        while (await timer.WaitForNextTickAsync())
        {
            if (currentLineIndex < fileLines.Count)
            {
                lines.Add(fileLines[currentLineIndex]);
                currentLineIndex++;
                InvokeAsync(StateHasChanged);
            }
            else
            {
                timer.Dispose();
                break;
            }
        }
    }
}



