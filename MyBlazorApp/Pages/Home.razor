@page "/"

@using System
@using System.Collections.Generic

<h3>Random Text List</h3>
<div style="height: 500px; overflow-y: scroll;">
    <ul>
        @foreach (var line in RandomTextLines)
        {
            <li>@line</li>
        }
    </ul>
</div>

@code {
    private List<string> RandomTextLines { get; set; } = new List<string>();

    protected override void OnInitialized()
    {
        var random = new Random();
        for (int i = 0; i < 500; i++)
        {
            RandomTextLines.Add($"Random Text Line {random.Next(1, 10000)}");
        }
    }
}
