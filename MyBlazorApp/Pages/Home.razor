
@page "/"
@using System.Text.Json

<h3>JSON Reader</h3>
<ul style="height: 200px; overflow-y: scroll;">
    @foreach (var element in elements)
    {
        <li>@element</li>
    }
</ul>

@code {
    private List<string> elements = new List<string>();
    private List<JsonElement> jsonArray;
    private PeriodicTimer timer;
    private int currentIndex = 0;

    protected override async Task OnInitializedAsync()
    {
        // Simulated JSON data
        string jsonData = @"
        [
            { ""name"": ""Alice"", ""age"": 30 },
            { ""name"": ""Bob"", ""age"": 25 },
            { ""name"": ""Charlie"", ""age"": 35 },
            { ""name"": ""Diana"", ""age"": 28 },
            { ""name"": ""Eve"", ""age"": 22 }
        ]";

        // Parse the JSON data
        jsonArray = JsonSerializer.Deserialize<List<JsonElement>>(jsonData);

        timer = new PeriodicTimer(TimeSpan.FromSeconds(2));

        while (await timer.WaitForNextTickAsync())
        {
            if (currentIndex < jsonArray.Count)
            {
                var jsonObject = jsonArray[currentIndex];
                elements.Add(JsonSerializer.Serialize(jsonObject, new JsonSerializerOptions { WriteIndented = true }));
                currentIndex++;
                InvokeAsync(StateHasChanged);
            }
            else
            {
                timer.Dispose();
                break;
            }
        }
    }
}







